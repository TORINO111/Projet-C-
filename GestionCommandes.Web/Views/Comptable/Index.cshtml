@model IEnumerable<GestionCommandes.Core.Entities.Commande>

<h2>Liste des Commandes</h2>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Montant</th>
            <th>Client</th>
            <th>État</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var commande in Model)
        {
            <tr>
                <td>@commande.Date</td>
                <td>@commande.Montant</td>
                <td>@commande.Client.Nom @commande.Client.Prenom</td>
                <td>@commande.Etat</td>
                <td>
                    <a asp-action="Details" asp-route-id="@commande.Id">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>